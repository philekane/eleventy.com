{% extends "base.njk" %}

{% block content %}
 <div role="main" class="container">  
    <div class="row">
        <div class="col-md-8 blog-main sp">
            {{ content | safe }}
        </div><!-- blog-main -->
    
      
        <aside class="col-md-4 blog-sidebar sp">
          <div class="p-3 mb-3 bg-light rounded">
            <h3 class="font-italic">About</h3>
            <p class="mb-0">{{ settings.siteSettings.companyDescription }}</p>
          </div>

          <div class="p-3">
            <h4 class="font-italic">Archives</h4>
            <ol class="list-unstyled mb-0">
              <li><a href="#">March 2014</a></li>
              <li><a href="#">February 2014</a></li>
              <li><a href="#">January 2014</a></li>
              <li><a href="#">December 2013</a></li>
              <li><a href="#">November 2013</a></li>
              <li><a href="#">October 2013</a></li>
              <li><a href="#">September 2013</a></li>
              <li><a href="#">August 2013</a></li>
              <li><a href="#">July 2013</a></li>
              <li><a href="#">June 2013</a></li>
              <li><a href="#">May 2013</a></li>
              <li><a href="#">April 2013</a></li>
            </ol>
          </div>
          {% if settings.socialSettings | length %}
            <div class="p-3">
              <h4 class="font-italic">Elsewhere</h4>
              <ol class="list-unstyled">
                {% for social in settings.socialSettings %}
                  <li> <a href="{{ social.socialUrl }}" aria-label="{{ social.socialName }}">{{ social.socialName }}</a></li>
                {% endfor %}             
              </ol>
            </div>
        {% endif %}
        </aside><!-- /.blog-sidebar -->
</div><!-- /.row -->
</div><!-- container -->
{% endblock content %}
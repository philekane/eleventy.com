<footer>
    <div class="footer-top">
        <div class="footer-container">
            <div class="row grid">
                <div class="footer_widget">
                    <div class="inner">
                        <h3>About</h3>
                        <p>{{ settings.siteSettings.companyDescription }}</p>
                    </div>
                </div>
                <div class="footer_widget">
                    <div class="inner">
                        <h3>Company</h3>
                        <ul>
                            <li>
                                <a href="/about">Company Overview</a>
                            </li>
                            <li>
                                <a href="#">Meet The Team</a>
                            </li>
                            <li>
                                <a href="#">Our Awesome Partners</a>
                            </li>
                            <li>
                                <a href="/services">Our Services</a>
                            </li>
                            <li>
                                <a href="/faqs">Frequently Asked Questions</a>
                            </li>
                            <li>
                                <a href="/contact">Contact Us</a>
                            </li>
                            <li>
                                <a href="/terms">Terms of Use</a>
                            </li>
                            <li>
                                <a href="/privacy">Privacy Policy</a>
                            </li>
                        </ul>
                    </div>
                </div>
                {% if collections.posts | length %}
                    <div class="footer_widget">
                        <div class="inner">
                            <h3>Recent Posts</h3>
                            {% for post in collections.posts | reverse %}
                                {% if loop.index0 < 3 %}
                                    <div class="media">
                                     {% insertLazyImage  post.data.image,  post.data.title, "d-flex mr-3" %}
                      
                                       <div class="media-body">
                                            <h4>
                                                <a href="{{ post.url }}">{{ post.data.title }}</a>
                                            </h4>
                                            <span>{{ post.data.date | readableDate }}</span>
                                            {% excerpt post %}

                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                <div class="footer_widget">
                    <div class="inner">
                        <h3>Address</h3>
                        <h4>{{ settings.siteSettings.companyName }}</h4>
                        <p>{{ settings.siteSettings.address }}<br>P: {{ settings.siteSettings.phone }}</p>
                        <h3>Newsletter</h3>
                        <form action="#" class="nw_form">
                        <div>
                            <input placeholder="Enter your email" type="email" aria-label="email">
                            <button aria-label="Sign up for for newsletter"  type="submit" >
                                <i class="fa fa-lg fa-paper-plane" aria-hidden="true" title="submit"></i>
                            </button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="footer-container">
            <div class="row grid">
                <div class="dateYear">
                    <div class="copyright-txt">
                        <p>
                            {% copyrightYear %}
                            {{ settings.siteSettings.companyName }}. All Rights Reserved.</p>
                    </div>
                </div>
                <div class="footer-nav">

                    <!--class="current-menu-item"-->
                    {% for menu in settings.navigationMenu %}

                        <a href="{{ menu.pageUrl }}" >{{ menu.pageName }}</a>

                    {% endfor %}

                </div>

            </div>
        </div>
    </div>
</footer>
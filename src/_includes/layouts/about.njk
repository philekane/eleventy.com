{% extends "layouts/simple.njk" %}

{% block pageHeader %}{% endblock pageHeader %}

{% block content %}

    <div class="about-area spt bg2">
        <div class="container">

            <div class="row">
                <div class="col-md-6">
                    <div class="about-content">
                        <h2>{{ about.title}}</h2>
                        <p>{{ about.description }}</p>
                        <a href="{{ about.linkUrl }}" class="button">{{ about.linkText }}</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-img">
                        <img src="{{ about.image}}" alt="{{ about.title }}">
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock content %}
{% extends "layouts/base.njk" %}

{% block postContent %}
    <div class="area">
        <div class="container">
            <div class="row grid">
                {% if imagePosition == "right" %}
                    <div class="about-content">
                        <h1>{{ title}}</h1>
                        <p>{{ description }}</p>
                    </div>
                    <div class="about-img">
                        <img src="{{image}}" alt="{{ title }}">
                    </div>

                {% endif %}
                {% if imagePosition == "left" %}

                    <div class="about-img">
                        <img src="{{ image}}" alt="{{ title }}">
                    </div>

                {% endif %}
                {% if imagePosition == "noImage" %}

                    <div class="about-content">
                        <h2>{{ title}}</h2>
                        <p>{{ description }}</p>
                        {% if linkText %}
                            <a href="{{ linkUrl }}" class="button">{{ linkText }}</a>
                        {% endif %}
                    </div>

                {% endif %}

            </div>
        </div>
    </div>
{% endblock postContent %}
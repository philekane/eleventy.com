{% extends "base.njk" %}

{% block pageHeader %}{% endblock pageHeader %}

{% block content %}

    <div class="about-area spt bg2">
        <div class="container">
            <div class="section-title">
                <h2>Frequently Asked Questions</h2>
                <p>{{ about.title }}</p>
              </div>
            <div class="row">
            
                <div class="col-md-6">
                    <div class="about-content">
                        <h2>{{ index.about.title}}</h2>
                        <p>{{ about.description }}</p>
                        <a href="{{ about.linkUrl }}" class="button">{{ about.linkText }}</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-img">
                        <img src="{{ about.image}}" alt="{{ about.title }}">
                    </div>
                </div>
                {% if about.imagePosition == "right" %}
                    {% include "layouts/about-right.njk" %}
                {% endif %}
                {% if about.imagePosition == "left" %}
                    {% include "layouts/about-left.njk" %}
                {% endif %}
                {% if about.imagePosition == "noImage" %}
                    <div class="col-md-8 mx-auto">
                        <div class="about-content">
                            <h2>{{ about.title}}</h2>
                            <p>{{ about.description }}</p>
                            <a href="{{ about.linkUrl }}" class="button">{{ about.linkText }}</a>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock content %}
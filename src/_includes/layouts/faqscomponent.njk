<style>
/*
Custom elements are inline by default
*/
toggle-section {
    display: block;
}

/*
Only applies if script runs and 
`role="region"` is added
*/

    .controls {
        text-align: right;
        margin-bottom: 1em;
    }

    .controls li {
        display: inline;
    }

    button {
        background: #000;
        color: #fff;
        border: 0;
        font-size: 0.85rem;
        border-radius: 0.25rem;
    }

    toggle-section[role="region"] {
        border-width: 2px 0;
        border-style: solid;
    }

    toggle-section[role="region"] + toggle-section {
        border-top: 0;

    }
    toggle-section[open="true"] {
        background-color: #fff;
    }

</style>
  <div class="faq-area sp bg2">
                <div class="container">

                    <div class="section-title">
                        <h2>Frequently Asked Questions</h2>
                        <p>{{ faqs.description }}</p>
                    </div>

                    <div class="row">
                        {% if faqs.showImage == false %}
                         <div class="col-md-12">
                        {% else %}
                         <div class="col-md-6">
                         {% endif %}
                            <div class="faq">
                            {% for faq in faqs.faq %}
                                {% if loop.index <= faqs.number %}
                                    <toggle-section open="true">
                                        <h2 id="section-{{ loop.index }}">{{ faq.question }}</h2>
                                        <p>{{ faq.answer }} </p>
                                    </toggle-section>
                                {% endif %}
                            {% endfor %}
                            </div>
                        </div>
                         {% if faqs.showImage == true %}
                            <div class="col-md-6">
                                <div class="faq-img text-center">
                                    <img src="{{ faqs.image }}" alt="{{ faqs.imageAlt }}">
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
<script src="/assets/js/collapsible.js"></script>

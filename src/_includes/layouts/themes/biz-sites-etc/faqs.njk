{% extends "layout/base.njk" %}

{% block content %}

    <div class="area">

        <div class="container">
            <div class="section-title">
                <h1>Frequently Asked Questions</h1>
                <p>{{ faqs.description }}</p>
            </div>
            <div class="row faq-grid">
                <div class="faq-page">
                    {% for faq in faqs.faq %}
                        <a name="{{ loop.index }}" ></a>
                        <div class="single-faq">
                            <h2>
                                <span>{{ loop.index }}</span>{{ faq.question }}</h2>
                            <p>{{ faq.answer }}
                            </p>
                        </div>
                    {% endfor %}

                </div>
                <div class="faq-sidebar-wrap">
                    <h3>Index</h3>
                    <ul class="faq-sidebar">
                        {% for faq in faqs.faq %}
                            <li>
                                <a href="#{{ loop.index }}">
                                    <span>{{ loop.index }}.</span>
                                    {{ faq.question }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
{% extends "layouts/base.njk" %}

{% block content %}
<div class="area">
    <div class="container">
        <div class="section-title">
            <h1>{{ title }}</h1>
            <p>{{ description }}</p>
        </div>
        <div class="area">
           <div class="wrapper">
                <ul class="auto-grid">
                {% for member in settings.members %}
                <li>
                    <div class="single-team">
                        <div class="inner">
                            <div class="team-img">
                                <img src="/assets/img/{{ member.image.main }}" alt="{{ member.image.alt }}">
                            </div>
                            <div class="team-content">
                                <h2>{{ member.name }}</h2>
                                <h3>{{ member.position }}</h3>
                                <div class="team-social">
                                    {% for social in member.social %}
                                        <a href="{{ social.link }}" class="fa fa-lg fa-{{ social.name }}-square" aria-label="{{ member.name | spaceless ~ "-" ~ social.name }}"></a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                {% endfor %}               
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock content %}


	 <h2 class="pb-3 mb-4 font-italic border-bottom">
            From the Firehose
          </h2>
	{% for post in postslist | reverse %}
	<div class="blog-post" >
   			<h2 class="blog-post-title">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h2>
			
			<p class="blog-post-meta">
            	<time datetime="{{ post.date | machineDate }}">
                <small>{{ post.date | readableDate }} by {{ post.data.author }}</small>
				</time>
			</p>
			  {% excerpt post %}  
			
			{% if post.data.tag %}
				<p class="blog-post-tags">
					{% for tag in post.data.tag %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
	</div> <!-- blog-post -->
	{% endfor %}



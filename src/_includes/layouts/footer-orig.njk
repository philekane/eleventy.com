<footer>
    <div class="footer-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 footer_widget">
                    <div class="inner">
                        <h3>About</h3>
                        <p>{{ settings.siteSettings.companyDescription }}</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 footer_widget">
                    <div class="inner">
                        <h3>Company</h3>
                        <ul>
                            <li>
                                <a href="/about">Company Overview</a>
                            </li>
                            <li>
                                <a href="#">Meet The Team</a>
                            </li>
                            <li>
                                <a href="#">Our Awesome Partners</a>
                            </li>
                            <li>
                                <a href="/services">Our Services</a>
                            </li>
                            <li>
                                <a href="/faqs">Frequently Asked Questions</a>
                            </li>
                            <li>
                                <a href="/contact">Contact Us</a>
                            </li>
                            <li>
                                <a href="/terms">Terms of Use</a>
                            </li>
                            <li>
                                <a href="/privacy">Privacy Policy</a>
                            </li>
                        </ul>
                    </div>
                </div>
                {% if collections.posts | length %}
                    <div class="col-md-6 col-lg-3 footer_widget">
                        <div class="inner">
                            <h3>Recent Posts</h3>
                            {% for post in collections.posts | reverse %}
                                {% if loop.index0 < 3 %}
                                    <div class="media">
                                        <a href="{{ post.url | url }}">
                                            <img src="{{ post.data.image }}" class="d-flex mr-3" alt="{{ post.data.title }}">
                                        </a>
                                        <div class="media-body">
                                            <h4>
                                                <a href="{{ post.url }}">{{ post.data.title }}</a>
                                            </h4>
                                             <span>{{ post.data.date | readableDate }}</span>                                            
                                       {% excerpt post %}                                         
                                          <p>  <a href="{{ post.url | url }}"
   aria-label="Read more on {{ post.data.title }}">Read This Post</a></p>
                                            </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                <div class="col-md-6 col-lg-3 footer_widget">
                    <div class="inner">
                        <h3>Address</h3>
                        <h4>{{ settings.siteSettings.companyName }}</h4>
                        <p>{{ settings.siteSettings.address }}<br>P: {{ settings.siteSettings.phone }}</p>
                        <h4>Newsletter</h4>
                        <form action="#" class="nw_form">
                            <input placeholder="Enter your email" type="email" aria-label="email">
                            <button aria-label="Sign up for for newsletter"  type="submit" >
                                <i class="fa fa-paper-plane" aria-hidden="true" title="submit"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="copyright-txt">
                        <p>
                            {% copyrightYear %}
                            {{ settings.siteSettings.companyName }}. All Rights Reserved.</p>
                    </div>
                </div>
                <div class="col-lg-8 text-right">
                    <div class="footer-nav">

                        <!--class="current-menu-item"-->
                        {% for menu in settings.navigationMenu %}

                            <a href="{{ menu.pageUrl }}" >{{ menu.pageName }}</a>

                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>